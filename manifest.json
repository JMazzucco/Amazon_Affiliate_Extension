{
  "manifest_version": 2,
  "name": "Amazon Portal",
  "icons": {"128": "icon.png"},
  "description": "Automatically adds an Amazon Portal parameter to the URL when visiting Amazon.com",
  "version": "0.1",
  "permissions": [
          "webRequest",
          "webRequestBlocking",
					"storage",
					"tabs",
          "*://www.amazon.com/*"
        ],
	"background": {
 		"scripts": ["background.js"]
	},

	"browser_action": {
	  "default_icon": "icon.png",
	  "default_title": "Popup test",
	  "default_popup": "popup.html"
	}

}


